{
  "name": "app-com-gauge",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test:base": "jest --watchAll --coverage --notify",
    "test": "npm run test:unit",
    "test:unit": "UNIT_TESTS=1 npm run test:base",
    "test:integration": "INTEGRATION_TESTS=1 npm run test:base",
    "ci": "jest --coverage",
    "karma:test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "gauge": "gauge --version"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "core-js": "^2.4.1",
    "jsdom": "9.11.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "html-loader": "0.4.4",
    "gauge-npm": "1.0.20",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "jest": "^19.0.1",
    "jsdom-xhr-patch": "^1.1.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "ts-jest": "^19.0.8",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0"
  },
  "jest": {
    "globals": {
      "__TRANSFORM_HTML__": true
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": ["node_modules", "src"],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/app/**/*.ts",
      "!**/node_modules"
    ],
    "coverageDirectory": "./coverage",
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest.ts",
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "testRegex": "/src/app/.*\\.spec\\.(ts)$"
  }
}
